extends layout

block body

  div.wrapper(data-ng-controller="MainCtrl")

    div.header(data-ng-show="location.path() == '/'")
      div.header-background
      div.header-content
        div.container
          div.row
            div.col-lg-12
              a(href="#")
                h1 The Grand Tour 
                h3 Exploring  
                  em.light A Dictionary of British and Irish Travellers in Italy, 1701-1800 
                  span by John Ingamells


    nav.navbar.navbar-default(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(data-ng-show="location.path() != '/'") Grand Tour

        #navbar-collapse
          ul.nav.navbar-nav
            li(data-ng-class="{'active' : location.path() == '/'}")
              a(href='#') About
            li(data-ng-class="{'active' : location.path() == '/explore'}")
              a(href='/search') Search
            li(data-ng-class="{'active' : location.path() == '/api'}")
              a(href='/api') API
            
    div.container

      div.view(ng-view)

  // scripts
  script(src='js/lib/jquery/jquery.js')
  script(src='js/lib/bootstrap/bootstrap.min.js')

  script(src='http://d3js.org/d3.v3.min.js')
  script(src='http://cdn.leafletjs.com/leaflet-0.7/leaflet.js')
  script(src='http://api.tiles.mapbox.com/mapbox.js/v1.0.4/mapbox.js')

  script(src='js/lib/angular/angular.min.js')
  script(src='js/lib/angular/angular-route.min.js')

  script(src='js/lib/infinite-scroll/ng-infinite-scroll.min.js')
  script(src='js/lib/ui-bootstrap/ui-bootstrap-tpls-0.11.0.min.js')

  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
